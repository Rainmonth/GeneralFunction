<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.rainmonth.service.NormalServiceActivity">

    <TextView
        android:id="@+id/tv_btn_start_service"
        style="@style/service_text_btn"
        android:text="开启Service" />

    <TextView
        android:id="@+id/tv_btn_stop_service"
        style="@style/service_text_btn"
        android:text="停止Service" />

    <TextView
        android:id="@+id/tv_btn_bind_service"
        style="@style/service_text_btn"
        android:text="Bind Service" />

    <TextView
        android:id="@+id/tv_btn_unbind_service"
        style="@style/service_text_btn"
        android:text="Unbind Service" />

</LinearLayout>
